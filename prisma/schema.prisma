generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Match {
  id        Int      @id @default(autoincrement())
  map       String
  rounds    Int
  playedAt  DateTime
  players   Player[]
}

model Player {
  id        Int    @id @default(autoincrement())
  steamId   String
  name      String
  team      String
  matchId   Int
  match     Match  @relation(fields: [matchId], references: [id])
}
