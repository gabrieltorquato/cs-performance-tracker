generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Match {
  id        Int      @id @default(autoincrement())
  map       String
  playedAt  DateTime
  players   Player[]
}

model Player {
  id      Int          @id @default(autoincrement())
  steamId String
  name    String

  match   Match        @relation(fields: [matchId], references: [id])
  matchId Int

  stats   PlayerStats?
}

model PlayerStats {
  id       Int    @id @default(autoincrement())

  kills    Int
  deaths   Int
  assists  Int
  headshots Int
  damage   Int
  adr      Float
  rating   Float

  killsCT  Int
  killsTR  Int
  deathsCT Int
  deathsTR Int
  roundsCT Int
  roundsTR Int

  player   Player @relation(fields: [playerId], references: [id])
  playerId Int    @unique
}